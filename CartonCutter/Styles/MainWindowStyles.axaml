<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Стили для кнопки закрытия -->
    <Style Selector="Button#CloseButton:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="Red"/>
    </Style>
    <Style Selector="Button#CloseButton:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="DarkRed"/>
    </Style>

    <!-- Общие стили для кнопок заголовка -->
    <Style Selector="Button.title-bar-button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Width" Value="50"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="CornerRadius" Value="0"/>
    </Style>

</Styles>